      <Code Language="csharp" Delimiter="$">
  <![CDATA[
    public class Meta {
        [Fact]
        public void ImplementsExpectedInterface() {
            // arrange
            using var mock  = AutoMock.GetLoose();
            var       model = mock.Create<$className$>();

            // act

            // assert
            model.Should()
                 .BeAssignableTo<$interfaceName$>();
        }
    }
