      </Declarations>
      <Code Language="csharp" Delimiter="$"><![CDATA[[Fact]
            public void GoodModel_HasExpectedValue() {
                // arrange
                var model    = MakeModel();
                var expected = $expected$;

                // act

                // assert
                model.$propertyName$
                     .Should()
                     .Be(expected);
            }

            [Fact]
            public void InitializeModel_HasNullValue() {
                // arrange
                var model = new $className$();

                // act

                // assert
                model.$propertyName$
                     .Should()
                     .BeNull();
            }]]></Code>
